{
  "env": {
    "jest": true
  },
  "extends": ["next/core-web-vitals", "airbnb"],
  "rules": {
    "react/prop-types": "off",
    "react/no-danger": "off",
    "comma-dangle": "off",
    "jsx-quotes": ["error", "prefer-single"],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "operator-linebreak": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "extensions": [".js", ".jsx"],
        "map": [["@", "./src"]]
      }
    }
  }
}
